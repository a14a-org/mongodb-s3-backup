# MongoDB Connection
MONGODB_URI=mongodb://username:password@host:port/database

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-mongodb-backups-bucket

# S3-compatible Storage (DigitalOcean Spaces, Minio, etc.)
# Uncomment and set the following for non-AWS S3-compatible storage
# S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=/path/to/local/backup/dir

# Logging
LOG_LEVEL=info
LOG_FILE=mongodb-backup.log 